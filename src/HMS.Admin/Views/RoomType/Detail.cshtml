@model RoomTypeDetailViewModel
@{
    ViewData["Title"] = "Detail";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Room Type Detail</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="item d-flex mt-2">
                        <h4>Name:</h4>
                        <span class="ml-2">@Model.Name</span>
                    </div>
                </div>
            </div>
            <hr />
            <a asp-action="Index" class="btn btn-info text-light my-button">
                <i class="mdi mdi-keyboard-backspace"></i> <span>Back</span>
            </a>
        </div>
    </div>
</div>

